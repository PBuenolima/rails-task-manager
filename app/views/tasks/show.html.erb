<h1><%= @task.title %></h1>

<div class="tasks_description">
  <p><%= @task.details %></p>
  <p><%= @task.completed %></p>
</div>

<%= link_to 'Edit this task', edit_task_path(@task)%>

<%= link_to 'Delete this task',
            task_path(@task),
            method: 'DELETE',
            data: { confirm: 'Are you sure?' } %>

<%= link_to 'Back to index', tasks_path %>
